@{
  Layout = "_Layout";
}

@using VendorTracker.Models

<div class="container">
  <h1>Current Vendors:</h1>
</div>

@if (@Model.Count == 0)
{
  <div class="container">
    <h3>There are currently no vendors.</h3>
  </div>
}

<div class="container">
  <ul>
    @foreach (Vendor vendor in @Model)
    {
      <li><h2><a href="/vendors/@vendor.Id">@vendor.Name</a></h2></li>
    }
  </ul>
</div>

<div class="container">
  <h5><a href="/vendors/new">Add a New Vendor</a></h5>
  <h5><a href="/">Back to Home Page</a></h5>
</div>