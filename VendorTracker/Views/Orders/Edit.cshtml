@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<div class="container">
  <h1>Order Details</h1>
  <h3>Edit Order Details</h3>
</div>

<div class="container">
  <form action='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id' method="post">
    <label for="newTitle">Edit Title:</label>
    <br />
    <input id="newTitle" name="newTitle" type="text" value='@Model["order"].Title' required>
    <br />
    <label for="newDescription">Edit Description:</label>
    <br />
    <textarea id="newDescription" name="newDescription" type="text" value='@Model["order"].Description' required>@Model["order"].Description</textarea>
    <br />
    <label for="newPrice">Edit Price:</label>
    <br />
    <input id="newPrice" name="newPrice" type="number" value='@Model["order"].Price' required>
    <br />
    <label for="newDate">Edit Date:</label>
    <br />
    <input id="newDate" name="newDate" type="text" value='@Model["order"].Date' required>
    <br />
    <br />
    <button type="submit" class="btn btn-success">Update Order</button>
  </form>

  <br/>
  <form action='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id/delete' method="post">
    <input id="vendorId" name="vendorId" type="hidden" value='@Model["vendor"].Id'>
    <input id="orderId" name="orderId" type="hidden" value='@Model["order"].Id'>
    <button type="submit" class="btn btn-danger">Delete Order</button>
  </form>
</div>

<div class="links container">
  <h5><a href='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id'>Back to Order Details</a></h5>
  <h5><a href='/vendors/@Model["vendor"].Id'>Back to Orders</a></h5>
</div>