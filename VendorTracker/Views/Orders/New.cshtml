@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<div class="container">
  <h1>Add a New Order for @Model.Name</h1>
</div>

<div class="container">
  <form action="" method="post">
    <label>Enter a Title:</label>
    <input>

    <label>Enter a Description:</label>
    <input>

    <label>Enter a Price:</label>
    <input>

    <label>Enter the Date:</label>
    <input>

    <button type="submit">Add Order</button>
  </form>
</div>

<div class="container">
  <h5><a href="/vendors/@Model.Id/">Back to Vendor Page for @Model.Name</a></h5>
  <h5><a href="/vendors">Back to Vendors</a></h5>
</div>